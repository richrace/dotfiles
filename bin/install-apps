#!/usr/bin/env bash
export DOTFILES_ROOT="$HOME/.dotfiles"

command_exist() {
  local command="$1"
  command -v "$command" > /dev/null 2> /dev/null
  return $?
}

# Although Mac has ZSH installed, we want the latest and greatest.
brew_apps=(
  zsh
  nvm
  npm
  git-extras
  yarn
  rbenv
  hub
  wget
  pyenv
  terraform
  htop
  tmux
  gzip
  tfenv
  1password
  alfred
  dash
  docker
  firefox
  google-chrome
  iterm2
  istat-menus
  postman
  pock
  slack
  spectacle
  tableplus
  the-unarchiver
  gpg-suite
  font-fira-mono
  font-fira-mono-for-powerline
  visual-studio-code
  the-unarchiver
  monitorcontrol
  openjdk@11
)

brew_taps=(
  homebrew/cask-fonts
)

npm_globals=(
  eslint
  prettier
  eslint-plugin-prettier
  eslint-plugin-react
  diff-so-fancy
  git-standup
)

if command_exist brew; then
  for brew_app in "${brew_apps[@]}"; do
    if test ! $(brew list | grep  -e ^$brew_app\$); then
      brew install $brew_app

      if [[ "$brew_app" == 'rbenv' ]]; then
        rbenv install 3.2.2
        rbenv global 3.2.2

        gem install rubocop
        gem install rubocop-rails
        gem install rubocop-rspec
      fi
    fi
  done

  for brew_tap in "${brew_taps[@]}"; do
    if [[ ! $(brew tap | grep $brew_tap) ]]; then
      brew tap $brew_tap
    fi
  done
fi

if command_exist npm; then
  for npm_package in "${npm_globals[@]}"; do
    if test ! "$(npm list --global 2> /dev/null | grep $npm_package)"; then
      npm install --global $npm_package
    fi
  done
fi

# After `brew` has install ZSH ensure we use it.
if [[ ! "$SHELL" == '/bin/zsh' ]]; then
  sudo sh -c "echo '$(which zsh)' >> /etc/shells"
  chsh -s $(which zsh)
fi
