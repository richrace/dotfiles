{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "quotes": 0,
    "eqeqeq": 2,
    "react/prop-types": 1,
    "no-eval": 2,
    "object-shorthand": [2, "never"]
  },
  "overrides": {
    "files": "**/*.jsx",
    "rules": {
      "object-shorthand": [2, "consistent"]
    }
  },
  "plugins": ["react", "jest"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "jquery": true,
    "jest/globals": true
  },
  "globals": {
    "_": true,
    "React": true,
    "Redux": true,
    "ReactRedux": true,
    "ReactCSSTransitionGroup": true,
    "require": true,
    "createReactClass": true,
    "PropTypes": true
  }
}
