{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "quotes": 0,
    "eqeqeq": 2,
    "no-eval": 2,
    "object-shorthand": [2, "never"]
  },
  "overrides": {
    "files": "**/*.jsx",
    "rules": {
      "object-shorthand": [2, "consistent"]
    }
  },
  "plugins": [],
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "_": true,
    "require": true
  }
}
